                                                                            <CheckBox Margin="10,0,0,0"  FontSize="16" Foreground="#FFF"   VerticalAlignment="Center"></CheckBox>
                                                                            <ComboBox  FontFamily="FZLTZHUNHK" FontSize="16" Foreground="#FFF" Width="140" Height="35" BorderBrush="#FF565656" VerticalContentAlignment="Center" 
              Padding="40,0,0,0" IsEditable="False" Style="{DynamicResource ComboBoxStyle}" Margin="10,0,0,0" SelectedIndex="0">
                                                                                <ComboBoxItem Content="" Padding="40,0,0,0"/>
                                                                                <ComboBoxItem Content="李四" Padding="40,0,0,0"/>
